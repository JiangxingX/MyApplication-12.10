<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/powderblue">

    <LinearLayout
        style="@style/register_ly">
        <TextView
            style="@style/register_textview"
            android:text="用户名"/>
        <EditText
            style="@style/register_edittext"
            android:id="@+id/register_user"
            android:hint="您的账户名和登录名" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        style="@style/register_ly">
        <TextView
            style="@style/register_textview"
            android:text="  密码"/>
        <EditText
            style="@style/register_edittext"
            android:id="@+id/register_password"
            android:inputType="textPassword"
            android:hint="建议字符组合使用" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        style="@style/register_ly">
        <TextView
            style="@style/register_textview"
            android:text="确认密码"/>
        <EditText
            style="@style/register_edittext"
            android:id="@+id/register_repassword"
            android:inputType="textPassword"
            android:hint="请再次输入密码" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        style="@style/register_ly">
        <TextView
            style="@style/register_textview"
            android:text="手机号码"/>
        <EditText
            style="@style/register_edittext"
            android:id="@+id/register_tele"
            android:hint="建议填写常用手机号码" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        style="@style/register_ly">
        <TextView
            style="@style/register_textview"
            android:text="性别"/>
        <RadioGroup
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/sex_man"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:checked="true"
                android:textColor="@color/dimgray"
                android:text="男"/>
            <RadioButton
                android:id="@+id/sex_woman"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textColor="@color/dimgray"
                android:text="女"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <Button
        android:id="@+id/register_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_login"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:text="注册"/>
</LinearLayout>